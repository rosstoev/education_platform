{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        {% include "components/page-title.html.twig" with {'title' : 'Регистрация'} %}
        <section class="pt-4">
            <form action="">
                <div class="mb-3">
                    <div class="mb-1">
                        <label for="userType">Аз съм</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="userType" id="teacher-option" value="teacher">
                        <label class="form-check-label" for="teacher-option">Преподавател</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="userType" id="student-option" value="student">
                        <label class="form-check-label" for="student-option">Ученик</label>
                    </div>
                </div>
                <div class="row justify-content-between">
                    <div class="col-4">
                        <div class="form-floating my-3">
                            <input type="email" class="form-control" id="email" placeholder="имейл адрес">
                            <label for="email">имейл адрес</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="password" placeholder="Парола">
                            <label for="password">Парола</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="repeated-password"
                                   placeholder="Повтори парола">
                            <label for="repeated-password">Повтори парола</label>
                        </div>
                        <div class="mb-1">
                            <label class="" for="mobileNumber">Мобилен номер</label>
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="mobile-code">+359</span>
                            <input id="mobileNumber" type="text" class="form-control" placeholder="XXXXXXXXX" aria-label="mobileNumber" aria-describedby="mobile-code">
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-floating my-3">
                            <input type="text" class="form-control" id="firstName" placeholder="Име">
                            <label for="firstName">Име</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="secondName" placeholder="Презиме">
                            <label for="secondName">Презиме</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="lastName" placeholder="Фамилия">
                            <label for="lastName">Фамилия</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="courseNumber" placeholder="Курсов номер">
                            <label for="courseNumber">Курсов номер</label>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center my-3">
                    <div class="col-md-auto">
                        <button type="submit" class="btn btn-primary">Регистрация</button>
                    </div>

                </div>
            </form>
        </section>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('register') }}
{% endblock %}