{% if teacher is defined %}
    {% set pageComponents = {
        'layout' : 'admin/teacher/base_layout.html.twig',
        'buttonColor' : 'btn-primary'
    } %}
{% elseif student is defined %}
    {% set pageComponents = {
        'layout' : 'admin/student/base_layout.html.twig',
        'buttonColor' : 'btn-secondary'
    } %}
{% endif %}

{% extends pageComponents.layout %}

{% block content %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Съобщение</h1>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    {{ form_start(form) }}
                    <div class="card card-primary">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-4">
                                    {{ form_row(form.receiver) }}
                                </div>
                                <div class="col-12">
                                    {{ form_row(form.text) }}
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn {{ pageComponents.buttonColor }}">Изпрати</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}