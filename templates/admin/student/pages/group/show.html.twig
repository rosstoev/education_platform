{% extends "admin/student/base_layout.html.twig" %}

{% block content %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Група {{ group.course }}</h1>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Група {{ group.course }}</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-8 order-2 order-md-1">
                        <div class="row">
                            <div class="row">
                                <div class="col-12 mb-2">
                                    <div> Учебна година: {{ group.formatStudyYear }}</div>
                                </div>
                                <div class="col-12 mb-2">
                                    <div> Създадена на: {{ group.createdAt|date('d.m.Y H:i') }}</div>
                                </div>
                                <div class="col-12 mb-2">
                                    <h6>Ученици:</h6>
                                    <ul class="list-group list-group-numbered">
                                        {% for student in group.students %}
                                            <li class="list-group-item">
                                                <a href="{{ path('student_profile', {'student': student.id}) }}">
                                                    {{ student.firstName }} {{ student.lastName }}
                                                </a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                                <div class="col-12 mb-2">
                                    <h6>Дисциплини:</h6>
                                    <ul class="list-group list-group-numbered">
                                        {% for discipline in group.disciplines %}
                                            <li class="list-group-item">
                                                <a href="{{ path('student_discipline_show', {'discipline': discipline.id}) }}">
                                                    {{ discipline.name }}
                                                </a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
            </div>
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
{% endblock %}