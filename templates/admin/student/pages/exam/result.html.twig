{% extends "admin/student/base_layout.html.twig" %}

{% block content %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Резултат</h1>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    {% if exam is not null %}
        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Изпит {{ exam.teacherExam.token }}</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-md-12 col-lg-8 order-2 order-md-1">
                            <div class="row">
                                <div class="row">
                                    <div class="col-12 mb-2">
                                        <div>Преподавател: <a href="{{ path('student_teacher', {'teacher' : exam.teacherExam.creator.id}) }}">{{ exam.teacherExam.creator.firstName }} {{ exam.teacherExam.creator.lastName }}</a></div>
                                    </div>
                                    <div class="col-12 mb-2">
                                        <div>Дисциплина: <a href="{{ path('student_discipline_show', {'discipline': exam.teacherExam.discipline.id}) }}">{{ exam.teacherExam.discipline.name }}</a></div>
                                    </div>
                                    <div class="col-12 mb-2">
                                        <div>Дата за провеждане: {{ exam.teacherExam.startedAt|date('d.m.Y H:i') }}</div>
                                    </div>
                                    <div class="col-12 mb-2">
                                        <div>Завършен на: {% if exam.finishedAt != null %}{{ exam.finishedAt|date('d.m.Y H:i') }}{% endif %}</div>
                                    </div>
                                    <div class="col-12 mb-2">
                                        <div>Оценка: {{ exam.evaluation }}</div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                </div>
            </div>
            <!-- /.card -->

        </section>
        <!-- /.content -->
        {% else %}
            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Изпит</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 col-md-12 col-lg-8 order-2 order-md-1">
                                <div class="row">
                                    <div class="row">
                                        <div class="col-auto mb-2">
                                            <div class="alert alert-warning"> Няма резултат</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                    </div>
                </div>
                <!-- /.card -->

            </section>
            <!-- /.content -->
    {% endif %}

{% endblock %}