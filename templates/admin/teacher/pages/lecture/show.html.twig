{% extends "admin/teacher/base_layout.html.twig" %}

{% block content %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Занятие {{ lecture.name }}</h1>
                </div><!-- /.col -->
            </div><!-- /.row -->
            {% for message in app.flashes('createLectureSuccess') %}
                <div class="row mt-3">
                    <div class="col-auto">
                        <div class="alert alert-success">{{ message }}</div>
                    </div>
                </div>
            {% endfor %}
        </div><!-- /.container-fluid -->
    </div>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Занятие {{ lecture.name }}</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-8 order-2 order-md-1">
                        <div class="row">
                            <div class="row">
                                <div class="col-12 mb-2">
                                    <div> Дата на провеждане: 01.01.2021 13:00</div>
                                </div>
                                <div class="col-12 mb-2">
                                    <div> Група: <a href="{{ path('teacher_group_show', {'group' : lecture.studentGroup.id}) }}">{{ lecture.studentGroup.course }} | {{ lecture.studentGroup.formatStudyYear }}</a></div>
                                </div>
                                <div class="col-12 mb-2">
                                    <div> Дисциплина: <a href="{{ path('teacher_discipline_show', {"discipline" : lecture.discipline.id}) }}">{{ lecture.discipline.name }}</a></div>
                                </div>
                                <div class="col-12 mb-2">
                                    <div>Описание:</div>
                                    <p>{{ lecture.description }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <div class="row justify-content-between">
                    <div class="col-3">
                        <a href="{{ path('teacher_lecture_edit', {'lecture' : lecture.id}) }}" class=" btn btn-primary">Редактирай</a>
                    </div>
                    <div class="col-auto">
                        <a href="{{ path('teacher_lecture_delete', {'lecture' : lecture.id}) }}" class=" btn btn-danger">Изтрий</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
{% endblock %}