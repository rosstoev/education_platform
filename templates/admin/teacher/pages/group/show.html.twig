{% extends "admin/teacher/base_layout.html.twig" %}

{% block content %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Група {{ group.course }}</h1>
                </div><!-- /.col -->
            </div><!-- /.row -->
            {% for message in app.flashes('createGroupSuccess') %}
                <div class="row mt-3">
                    <div class="col-auto">
                        <div class="alert alert-success">{{ message }}</div>
                    </div>
                </div>
            {% endfor %}
        </div><!-- /.container-fluid -->
    </div>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Група {{ group.course }}</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-8 order-2 order-md-1">
                        <div class="row">
                            <div class="row">
                                <div class="col-12 mb-2">
                                    <div> Учебна година: {{ group.formatStudyYear}}</div>
                                </div>
                                <div class="col-12 mb-2">
                                    <div> Създадена на: {{ group.createdAt|date('d.m.Y') }}</div>
                                </div>
                                <div class="col-12 mb-2">
                                    <h6>Ученици:</h6>
                                    <ul class="list-group list-group-numbered">
                                        {% for student in group.students %}
                                            <li class="list-group-item"><a
                                                        href="{{ path('teacher_student_profile', {'student' : student.id}) }}">{{ student.firstName }} {{ student.lastName }}</a></li>
                                        {% endfor %}
                                    </ul>
                                </div>
                                <div class="col-12 mb-2">
                                    <h6>Дисциплини:</h6>
                                    <ul class="list-group list-group-numbered">
                                        {% for discipline in group.disciplines %}
                                        <li class="list-group-item">
                                            <a href="{{ path('teacher_discipline_show', {'discipline': discipline.id}) }}">
                                                {{ discipline.name }}
                                            </a>
                                        </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <div class="row justify-content-between">
                    <div class="col-3">
                        <a href="{{ path('teacher_group_edit', {'group' : 1}) }}"
                           class=" btn btn-primary">Редактирай</a>
                    </div>
                    <div class="col-auto">
                        <a href="{{ path('teacher_group_delete', {'group' : 1}) }}" class=" btn btn-danger">Изтрий</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
{% endblock %}