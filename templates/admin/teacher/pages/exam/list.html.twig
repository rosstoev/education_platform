{% extends "admin/teacher/base_layout.html.twig" %}

{% block content %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Изпити</h1>
                </div><!-- /.col -->
            </div><!-- /.row -->
            {% for message in app.flashes('examListWarning') %}
                <div class="row mt-3">
                    <div class="col-auto">
                        <div class="alert alert-warning">{{ message }}</div>
                    </div>
                </div>
            {% endfor %}
        </div><!-- /.container-fluid -->
    </div>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Списък изпити</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="row">
                                {{ form_start(form) }}
                                <div class="col-4">
                                    {{ form_row(form.discipline) }}
                                </div>
                                <div class="col-8">
                                    <div class="row">
                                        <div class="col-4">
                                            <div class="form-group">
                                                <label>От</label>
                                                {{ form_row(form.from) }}
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="form-group">
                                                <label>До</label>
                                                {{ form_row(form.to) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4 mb-3">
                                    <button type="submit" class="btn btn-primary mt-3">Намери</button>
                                </div>
                                {{ form_end(form) }}
                            </div>
                            <table class="table table-bordered table-hover data-table">
                                <thead>
                                <tr>
                                    <th>Токън</th>
                                    <th>Дисциплина</th>
                                    <th>Дата на провеждане</th>
                                    <th>Завършени</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for exam in exams %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('teacher_exam_show', {'exam' : exam.id}) }}">{{ exam.token }}</a>
                                        </td>
                                        <td>
                                            <a href="{{ path('teacher_discipline_show', {'discipline' : exam.discipline.id}) }}">{{ exam.discipline.name }}</a>
                                        </td>
                                        <td>
                                            {{ exam.startedAt|date('d.m.Y H:i') }}
                                        </td>
                                        <td>
                                            <a href="{{ path('teacher_exam_finished_exam_list', {'exam' : 1}) }}">Виж</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                <tr>
                                    <th>Токън</th>
                                    <th>Дисциплина</th>
                                    <th>Дата на провеждане</th>
                                    <th>Завършени</th>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-3">
                                    <a href="{{ path('teacher_exam_new') }}" class=" btn btn-primary">Създай изпит</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
            </div>

        </div>
    </section>

{% endblock %}