{% extends "admin/teacher/base_layout.html.twig" %}

{% block content %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Дисциплини</h1>
                </div><!-- /.col -->
            </div><!-- /.row -->
            {% for message in app.flashes('deleteDisciplineSuccess') %}
                <div class="row mt-3">
                    <div class="col-auto">
                        <div class="alert alert-warning">{{ message }}</div>
                    </div>
                </div>
            {% endfor %}

        </div><!-- /.container-fluid -->
    </div>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Списък дисциплини</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table class="table table-bordered table-hover data-table">
                                <thead>
                                <tr>
                                    <th>Име</th>
                                    <th>Създадена на</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for discipline in disciplines %}
                                    <tr>
                                        <td><a href="{{ path('teacher_discipline_show', {'discipline' : discipline.id}) }}">{{ discipline.name }}</a></td>
                                        <td>{{ discipline.createdAt|date('d.m.Y г.') }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                <tr>
                                    <th>Име</th>
                                    <th>Създадена на</th>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <div class="row my-3">
                                <div class="col-3">
                                    <a href="{{ path('teacher_discipline_new') }}" class=" btn btn-primary">Създай дисциплина</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </section>

{% endblock %}